// C++ code
//
void setup()
{
  pinMode(LED_BUILTIN, OUTPUT);
  pinMode(13, OUTPUT);
  Serial.begin(9600);
}

void loop()
{
  int ad_input = analogRead(A0);
  
  Serial.print("ad_input = ");
  Serial.println(ad_input);

  if(ad_input <= 500)
  {
   digitalWrite(13, HIGH);
   delay(1000); 
  }
  
  else
    digitalWrite(13,LOW);
  	 delay(1000); 
  
    
}
